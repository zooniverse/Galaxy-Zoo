.dialog
  .help
    color: $dark-gray
    font-family: 'Open Sans'
    font-size: 12px
    font-weight: 400
    min-height: 200px
    text-align: left
    
    .heading, .sub-heading
      font-weight: 400
      font-size: 24px
      line-height: 40px
      margin: 0 0 15px 0
      padding: 0 0 0 25px
      -webkit-box-shadow: 0px 1px 0px #D9D9D9, 0px 2px 0px #FFFFFF
      -moz-box-shadow: 0px 1px 0px #D9D9D9, 0px 2px 0px #FFFFFF
      box-shadow: 0px 1px 0px #D9D9D9, 0px 2px 0px #FFFFFF
    
    .sub-heading
      font-size: 18px
      line-height: 22px
      margin: 18px 0
      padding: 0 0 5px 0
    
    .text
      margin: 0
      padding: 0 0 0 25px
    
    .examples
      padding: 10px 25px
      
      .row
        margin: 25px 0
        
        .example-answer
          workflow-icons()
          display: inline-block
          position: relative
          background-color: #000000
          vertical-align: top
          margin: 0 10px 0 0
          
          .label
            position: absolute
            bottom: -17px
            line-height: 15px
            width: 300px
            text-align: left
            font-weight: 700
        
        .example-images
          display: inline-block
          cursor: pointer
          
          .example-thumbnail
            example-images()
            display: inline-block
            margin: 0 5px 0 0
