#navigation
  width: 1000px
  margin: 0px auto
  margin-top: 40px
  height: 80px
  padding: 45px 0 0 0

  ul
    padding: 0
    margin: 0
    
    li
      font-family: "Open Sans"
      font-weight: 700
      font-size: 12px
      color: #efefef
      text-transform: uppercase
      width: $one-eighth
      line-height: 76px
      vertical-align: middle
      display: inline-block
      float: left
      text-align: center
      margin-right: $gutter-size
      position: relative
      
      a
        text-decoration: none
        color: #efefef
        
        &:hover
          text-decoration: underline
          color: #efefef
      
      .menu
        background: rgba(#2c2c2c, 0.75)
        display: none
        border-radius: 3px
        left: 0
        padding: 5px 0
        position: absolute
        top: 50px
        z-index: 9999999
        
        li
          line-height: 2
          margin-right: 0
          
          a
            display: block

        &.languages
          clearfix()
          left: auto
          padding: 5px 10px
          right: 0
          width: 330px

          li
            float: left
            margin-right: 25px
            width: auto

      &:hover .menu
        display: block
      
      &.last
        margin-right: 0
      
      &.logo
        min-width: $one-quarter
        background-position: center
        height: 76px
        
.social-icons
  text-align: right
  
  i
    background: rgba(white, 0.5)
    border-radius: 50%
    color: black
    font-size: 12px
    height: 12px
    margin: 0 0.2rem
    padding: 0.3rem
    text-align: center
    width: 12px

    &:last-child
      margin-right: 0

    &:hover
      color: white
